{
  "version": 2,
  "functions": {
    "api/upload.js": {
      "runtime": "nodejs", 
      "maxDuration": 30,
      "memory": 1024
    },
    "api/files.js": {
      "runtime": "nodejs",
      "maxDuration": 10,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/files/(.*)",
      "destination": "/api/files"
    }
  ],
  "headers": [
    {
      "source": "/files/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
